
<h1>JOB INFORMATION</h1>

<table>
	<tr>
		<td>REVIEWER</td>
		<td>COMPANY</td>
		<td>ROLE</td>
		<td>START YEAR</td>
		<td>END YEAR</td>
	</tr>
	<% @jobs.each do |job| %>
	<tr>
		<td><%= job.reviewer.name unless job.reviewer.nil? %></td>
		<td><%= job.company %></td>
		<td><%= job.role %></td>
		<td><%= job.startyear %></td>
		<td><%= job.endyear %></td>
		<td><%= link_to 'Delete', job_path(job), method: :delete, data: {confirm: 'Are you sure?'} %></td>
	</tr>
	<%end%>
</table>