<!DOCTYPE html>
<html>
<head>
  <title>AppName</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar">
		<ul class="nav">
			<li class='dropdown'><a class="nav-link" href="#">Reviewers</a>

			</li>
			<li class='dropdown'><a class="nav-link" href="#">Jobs</a>
				<ul>
					<li><%= link_to "New Jobs", new_job_path %></li>
					<li><%= link_to "All Jobs", jobs_path %></li>
				</ul>
			</li>
			<% if !reviewer_signed_in? %>
			<li>
				<%= link_to 'Login', new_reviewer_session_path, :class => "nav-link" %>
			</li>
			<% else %>
			<li>
				<%= link_to 'Edit Profile', edit_reviewer_registration_path, :class => "nav-link" %>
			</li>
			<li>
				<%= link_to 'Logout', destroy_reviewer_session_path, :method => :delete, :class => "nav-link" %>
			</li>
			<% end %>

		</ul>
	</div>


	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<div class="content">
		<%= yield %>
	</div>

</body>
</html>
